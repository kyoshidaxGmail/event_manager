<!-- devise/sessions/new-->
<div class="container">
  <div class="row navbar-fixed-top header">
    <img class="header-img" src="http://lakshmip.com/images/bond-logo.png" id="bond-logo" />
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <div class="chase-logo">
          <img class="profile-img" src="/assets/common/logo.png" alt="">
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "E-Mail", class: "form-control", required: true, autocomplete: "email" %>
          <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control", required: true, autocomplete: "off" %>
          <% if devise_mapping.rememberable? %>
            <div class="field sign_in_text">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

